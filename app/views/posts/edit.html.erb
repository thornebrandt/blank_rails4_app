<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<h1>Editing post</h1>
  <div class="field">
  <h2>Name</h2>
    <%= best_in_place @post, :name, :as => :input, :activator => '#editName' %>
  </div>
    <a id="editName" href="#">edit</a>
  <div class="field">
    <h2>Content</h2>
    <%= best_in_place @post, :content, :as => :textarea %>

  </div>
  <div class="field">
        <h2>Type</h2>
      <%= best_in_place @post, :type, :as => :select, :collection =>
            {
                "1" => "Type 1",
                "2" => "Type 2",
                "3" => "Type 3"
            }
       %>
  </div>
  <div class="actions">
  </div>

